.content
  .sign-in
    %h2 用户登录
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .control-group
        = f.label :email, class: 'control-label', for: 'email-input'
        .controls
          = f.email_field :email, class: 'input-xlarge', id: 'email-input'
      = f.label :password
      = f.password_field :password
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me
      = f.submit "Sign in"
    = render "links"
